<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:id="@+id/cview"
        android:layout_width="180dp"
        android:layout_height="220dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="25dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/food_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="veggie tomato mix"
            android:layout_marginTop="60dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:fontFamily="serif"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/food_price"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rs. 400"
            android:layout_marginTop="130dp"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:textColor="@color/orange"/>

    </androidx.cardview.widget.CardView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/food_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/momo"
        app:layout_constraintTop_toTopOf="@id/cview"
        app:layout_constraintBottom_toTopOf="@id/cview"
        app:layout_constraintLeft_toLeftOf="@id/cview"
        app:layout_constraintRight_toRightOf="@id/cview"
        android:elevation="10dp"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>